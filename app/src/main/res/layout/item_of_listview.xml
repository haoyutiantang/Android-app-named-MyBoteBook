<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/activated"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:typeface="monospace"
            android:text="名字:" />

        <TextView
            android:id="@+id/name_content"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text_name"
            android:textSize="22dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="时间:" />

        <TextView
            android:id="@+id/text_time_content"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text_time"
            android:textSize="22dp"
            android:text="" />

        <TextView
            android:id="@+id/text_typename"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/text_time_content"
            android:text="图文" />
    </LinearLayout>
</LinearLayout>
